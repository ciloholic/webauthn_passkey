<div class="p-4 flex basis-1 flex-col">
  <h1 class="text-3xl w-full mb-4">パスキー登録</h1>
  <form id="registration-form" class="flex flex-col gap-4">
    <div>
      <label for="friendly_name" class="block mb-1">パスキー名</label>
      <input type="text" id="friendly_name" name="friendly_name" maxlength="16" required
             class="border rounded px-2 py-1" placeholder="例: iPhone, 自宅PC" />
    </div>
    <div>
      <button type="submit" class="py-2 px-4 text-slate-50 bg-lime-500 rounded">
        登録する
      </button>
    </div>
  </form>
  <div id="error-message" class="text-red-500 mt-4"></div>
</div>
